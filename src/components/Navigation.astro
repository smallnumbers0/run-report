---
export interface Props {
  activePage: 'home' | 'book' | 'about';
}

const { activePage } = Astro.props;
---

<nav class="main-nav">
	<img src="/favicon.svg" alt="Logo" width="40" height="40" class="nav-logo" />
	<div class="nav-links">
		<a href="/" class={`nav-link ${activePage === 'home' ? 'active' : ''}`}>News</a>
		<a href="/book" class={`nav-link ${activePage === 'book' ? 'active' : ''}`}>Book</a>
		<a href="/about" class={`nav-link ${activePage === 'about' ? 'active' : ''}`}>About</a>
	</div>
</nav>

<style>
	.main-nav {
		background: rgb(0, 0, 0);
		backdrop-filter: blur(10px);
		padding: 16px 24px;
		display: flex;
		justify-content: space-between;
		align-items: center;
		position: sticky;
		top: 0;
		z-index: 100;
		border-bottom: 2px solid #ff1744;
		font-family: 'Inter', 'SF Pro Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
	}

	.nav-logo {
		flex-shrink: 0;
		display: block;
	}

	.main-nav h1 {
		color: #ffffff;
		margin: 0;
		font-size: 24px;
		font-weight: 700;
		letter-spacing: 1px;
	}

	.nav-links {
		display: flex;
		gap: 1rem;
	}

	.nav-link {
		color: #ffffff;
		text-decoration: none;
		padding: 8px 16px;
		border-radius: 6px;
		transition: all 0.3s ease-in-out;
		font-weight: 500;
		border: 1px solid transparent;
		background: rgba(20, 20, 20, 0.8);
		font-size: 14px;
		letter-spacing: 0.5px;
	}

	.nav-link:hover {
		background: rgba(20, 20, 20, 0.8);
		border-color: #ff174553;
		transform: translateY(-1px);
	}

	.nav-link.active {
		background: rgba(20, 20, 20, 0.8);
		border-color: #ff1744;
		font-weight: 600;
	}

	/* Mobile responsiveness */
	@media (max-width: 768px) {
		.main-nav {
			padding: 12px 16px;
		}

		.nav-logo {
			width: 36px !important;
			height: 36px !important;
			flex-shrink: 0;
			display: block !important;
		}

		.nav-links {
			gap: 0.5rem;
		}

		.nav-link {
			padding: 6px 12px;
			font-size: 13px;
		}
	}
</style>
