---
export interface Props {
  activePage: 'home' | 'book' | 'about';
}

const { activePage } = Astro.props;
---

<nav class="main-nav">
	<img src="/favicon.svg" alt="Logo" width="40" height="40" />
	<div class="nav-links">
		<a href="/" class={`nav-link ${activePage === 'home' ? 'active' : ''}`}>News</a>
		<a href="/book" class={`nav-link ${activePage === 'book' ? 'active' : ''}`}>Book</a>
		<a href="/about" class={`nav-link ${activePage === 'about' ? 'active' : ''}`}>About</a>
	</div>
</nav>

<style>
	.main-nav {
		background: rgba(255, 20, 50, 0.15);
		backdrop-filter: blur(10px);
		padding: 16px 24px;
		display: flex;
		justify-content: space-between;
		align-items: center;
		position: sticky;
		top: 0;
		z-index: 100;
		border-bottom: 2px solid #ff1744;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
	}

	.main-nav h1 {
		color: #ffffff;
		margin: 0;
		font-size: 24px;
		font-weight: 700;
		letter-spacing: 1px;
	}

	.nav-links {
		display: flex;
		gap: 1rem;
	}

	.nav-link {
		color: #ffffff;
		text-decoration: none;
		padding: 8px 16px;
		border-radius: 6px;
		transition: all 0.3s ease-in-out;
		font-weight: 500;
		border: 1px solid transparent;
		background: rgba(255, 255, 255, 0.1);
	}

	.nav-link:hover {
		background: rgba(255, 255, 255, 0.2);
		border-color: rgba(255, 255, 255, 0.3);
		transform: translateY(-1px);
	}

	.nav-link.active {
		background: rgba(255, 255, 255, 0.25);
		border-color: rgba(255, 255, 255, 0.4);
		font-weight: 600;
	}
</style>
